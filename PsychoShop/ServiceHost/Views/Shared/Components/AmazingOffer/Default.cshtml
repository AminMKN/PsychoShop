@model List<ProductQueryModel>

<section class="section-slider amazing-section col-lg-10 col-md-12 col-xs-12 mb-3 mt-4 pull-right" style="background: rgb(239, 57, 78);">
    <div class="container-amazing">
        <div class="container-main">
            <div>
                <div class="col-lg-3 display-md-none pull-right">
                    <div class="amazing-product text-center mt-5">
                        <a>
                            <img src="~/Theme/assets/images/amazing/amazing.png" alt="پیشنهاد شگفت انگیز" title="پیشنهاد شگفت انگیز">
                        </a>
                        <a asp-controller="SpecialProduct" asp-action="AmazingOffer" class="view-all-amazing-btn">
                            مشاهده همه
                            <i class="uil uil-angle-left"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-9 col-md-12 pull-left">
                    <div class="section-slider-content">
                        <div class="section-slider-product slider-amazing mt-3">
                            <div class="widget widget-product card" style="margin:0;">
                                <header class="card-header card-header-amazing">
                                    <span class="title-one">پیشنهاد شگفت انگیز</span>
                                    <a asp-controller="SpecialProduct" asp-action="AmazingOffer" class="card-title">مشاهده همه</a>
                                </header>
                                <div class="product-carousel owl-carousel owl-theme owl-rtl owl-loaded owl-drag">
                                    <div class="owl-stage-outer">
                                        <div class="owl-stage" style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s; width: 2234px;">
                                            @{
                                                foreach (var product in Model)
                                                {
                                                    <div class="owl-item active" style="width: 309.083px; margin-left: 10px;">
                                                        <div class="item">
                                                            <a asp-controller="Shop" asp-action="Product" asp-route-id="@product.Slug">
                                                                <img src="~/Pictures/@product.Picture" alt="@product.PictureAlt" title="@product.PictureTitle" class="img-fluid">
                                                            </a>
                                                            <h2 class="post-title">
                                                                <a asp-controller="Shop" asp-action="Product" asp-route-id="@product.Slug">
                                                                    @product.Name
                                                                </a>
                                                            </h2>
                                                            <div class="price">
                                                                @{
                                                                    if (product.HasDiscount)
                                                                    {
                                                                        <div class="discount-item">
                                                                            <span>@product.DiscountRate%</span>
                                                                        </div>
                                                                        <del><span>@product.Price.ToMoney()<span>تومان</span></span></del>
                                                                        <ins><span>@product.PriceWithDiscount.ToMoney()<span>تومان</span></span></ins>
                                                                    }
                                                                    else
                                                                    {
                                                                        <ins><span>@product.Price.ToMoney()<span>تومان</span></span></ins>
                                                                    }
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>