@model UserProfileModel
@{
    ViewData["Title"] = "ویرایش اطلاعات شخصی";
    Layout = "_UserAccountLayout";
    if (Model.Message == ApplicationMessages.TaskSuccessful)
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'success',
                title: '@Model.Message',
                text: 'فروشگاه اینترنتی سایکو شاپ',
                confirmButtonText: 'باشه',
            })
        </script>
    }
    else if (Model.Message != null && Model.Message != ApplicationMessages.TaskSuccessful)
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'error',
                title: '@Model.Message',
                text: 'فروشگاه اینترنتی سایکو شاپ',
                confirmButtonText: 'باشه',
            })
        </script>
    }
}

<div class="col-lg-12 col-md-12 col-xs-12">
    <div class="col-lg-12 col-xs-12 pull-right">
        <div class="profile-navbar">
            <div class="profile-navbar-back-alignment">
                <a asp-page="/Account/Profile/Index" class="profile-navbar-btn-back">بازگشت</a>
                <h4 class="edit-personal">
                    @ViewData["Title"]
                </h4>
            </div>
        </div>
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="EditUserAccount.Id" value="@Model.EditUserAccount.Id" />
            <div class="profile-stats">
                <div class="form-legal-row">
                    <div class="col-lg-6 col-xs-12 mx-auto">
                        <div class="form-legal-col">
                            <fieldset class="form-legal-fieldset">
                                <h4 class="form-legal-headline">حساب شخصی</h4>
                                <div class="form-legal-item">
                                    <label asp-for="EditUserAccount.FullName">نام و نام خانوادگی</label>
                                    <input asp-for="EditUserAccount.FullName" type="text" class="input-name-first" placeholder="نام و نام خانوادگی">
                                    <span asp-validation-for="EditUserAccount.FullName" class="text-danger"></span>
                                </div>
                                <div class="form-legal-item">
                                    <label asp-for="EditUserAccount.UserName">نام کاربری</label>
                                    <input asp-for="EditUserAccount.UserName" type="text" class="input-name-first" placeholder="نام کاربری">
                                    <span asp-validation-for="EditUserAccount.UserName" class="text-danger"></span>
                                </div>
                                <div class="form-legal-item">
                                    <label asp-for="EditUserAccount.Email">ایمیل</label>
                                    <input asp-for="EditUserAccount.Email" type="email" class="input-name-last" placeholder="ایمیل">
                                    <span asp-validation-for="EditUserAccount.Email" class="text-danger"></span>
                                </div>
                                <div class="form-legal-item">
                                    <label asp-for="EditUserAccount.PhoneNumber">شماره موبایل</label>
                                    <input asp-for="EditUserAccount.PhoneNumber" type="tel" class="input-name-last" placeholder="شماره موبایل">
                                    <span asp-validation-for="EditUserAccount.PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-legal-item">
                                    <label asp-for="EditUserAccount.ProfilePhoto">تصویر پروفایل</label>
                                    <input asp-for="EditUserAccount.ProfilePhoto" type="file" class="input-name-last" placeholder="تصویر پروفایل" accept="image/*">
                                    <span asp-validation-for="EditUserAccount.ProfilePhoto" class="text-danger"></span>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
                <div class="form-legal-row-submit">
                    <div class="parent-btn">
                        <button type="submit" class="dk-btn dk-btn-info">
                            ویرایش اطلاعات شخصی
                            <i class="fa fa-check sign-in"></i>
                        </button>
                    </div>
                    <a asp-controller="UserProfile" asp-action="Index" class="btn-default">انصراف</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }