@model AccountAdminModel
@{
    ViewData["Title"] = "کاربران";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12">
            <form method="get" class="form-inline">
                <input asp-for="SearchModel.UserName" class="form-control mr-1" placeholder="نام کاربری">
                <input asp-for="SearchModel.Email" type="email" class="form-control mr-1" placeholder="ایمیل">
                <button type="submit" class="btn btn-success mr-1">جستجو</button>
                <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="btn btn-primary mr-1">مشاهده همه</a>
                <a asp-area="Admin" asp-controller="Account" asp-action="Create" class="btn btn-info mr-1">ایجاد کاربر</a>
            </form>
            <hr />
            <h2 class="mb-2 page-title">@ViewData["Title"]</h2>
            <div class="row my-4">
                <div class="col-md-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <table class="table datatables" id="dataTable-1">
                                <thead>
                                    <tr>
                                        <th class="text-center">ردیف</th>
                                        <th class="text-center">عکس پروفایل</th>
                                        <th class="text-center">نام و نام خانوادگی</th>
                                        <th class="text-center">نام کاربری</th>
                                        <th class="text-center">ایمیل</th>
                                        <th class="text-center">وضعیت ایمیل</th>
                                        <th class="text-center">شماره موبایل</th>
                                        <th class="text-center">تاریخ ثبت نام</th>
                                        <th class="text-center">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int row = 1;
                                        foreach (var account in Model.Accounts)
                                        {
                                            <tr class="text-center">
                                                <td>@row</td>
                                                <td>
                                                    @{
                                                        if (account.ProfilePhoto != null)
                                                        {
                                                            <img src="~/Pictures/@account.ProfilePhoto" style="width: 70px; height: 70px" />
                                                        }
                                                        else
                                                        {
                                                            <img src="~/AdminTheme/assets/avatars/user-profile.svg" style="width: 70px; height: 70px" />
                                                        }
                                                    }
                                                </td>
                                                <td>@account.FullName</td>
                                                <td>@account.UserName</td>
                                                <td>@account.Email</td>
                                                <td>
                                                    @{
                                                        if (account.EmailConfirmed)
                                                        {
                                                            <h2><i class="fe fe-check-circle" style="color: green"></i></h2>
                                                        }
                                                        else
                                                        {
                                                            <h2><i class="fe fe-x-circle" style="color: red"></i></h2>
                                                        }
                                                    }
                                                </td>
                                                <td>@account.MobilePhone</td>
                                                <td>@account.CreationDate</td>
                                                <td>
                                                    <a asp-area="Admin" asp-controller="Account" asp-action="Edit" asp-route-id="@account.Id" class="btn btn-warning">ویرایش</a>
                                                </td>
                                            </tr>
                                            row += 1;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>