@model AccountAdminModel
@{
    ViewData["Title"] = "ویرایش کاربر";
    if (Model.Message == ApplicationMessages.TaskSuccessful)
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'success',
                title: '@Model.Message',
                text: 'فروشگاه اینترنتی سایکو شاپ',
                confirmButtonText: 'باشه',
            })
        </script>
    }
    else if (Model.Message == ApplicationMessages.DuplicatedUserName || Model.Message == ApplicationMessages.DuplicatedEmail)
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'error',
                title: '@Model.Message',
                text: 'فروشگاه اینترنتی سایکو شاپ',
                confirmButtonText: 'باشه',
            })
        </script>
    }
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <strong class="card-title">@ViewData["Title"]</strong>
                </div>
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <input type="hidden" asp-for="EditAccount.Id" value="@Model.EditAccount.Id" />
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="EditAccount.FullName">نام و نام خانوادگی</label>
                                    <input asp-for="EditAccount.FullName" type="text" class="form-control" placeholder="نام و نام خانوادگی" />
                                    <span asp-validation-for="EditAccount.FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="EditAccount.UserName">نام کاربری</label>
                                    <input asp-for="EditAccount.UserName" type="text" class="form-control" placeholder="نام کاربری" />
                                    <span asp-validation-for="EditAccount.UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="EditAccount.Email">ایمیل</label>
                                    <input asp-for="EditAccount.Email" type="email" class="form-control" placeholder="ایمیل" />
                                    <span asp-validation-for="EditAccount.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="EditAccount.MobilePhone">شماره موبایل</label>
                                    <input asp-for="EditAccount.MobilePhone" type="tel" class="form-control" placeholder="شماره موبایل" />
                                    <span asp-validation-for="EditAccount.MobilePhone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="custom-file">
                                        <input asp-for="EditAccount.ProfilePhoto" type="file" class="custom-file-input" accept="image/*">
                                        <label asp-for="EditAccount.ProfilePhoto" class="custom-file-label">انتخاب تصویر پروفایل</label>
                                        <span asp-validation-for="EditAccount.ProfilePhoto" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-info">ویرایش</button>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Account" asp-action="Index">بازگشت</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}